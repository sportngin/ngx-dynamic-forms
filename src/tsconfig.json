{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "stripInternal": true,
    "typeRoots": [ "./node_modules/@types" ],
    "types": [
      "chai",,
      "core-js",
      "mocha",
      "node",
      "sinon"
    ],
    "lib": [
      "es2015",
      "es2016",
      "es6",
      "es7",
      "dom"
    ],
    "outDir": "../dist"
  },
  "files": [
    "../public_api.ts"
  ],
  "angularCompilerOptions": {
    "skipMetadataEmit" : false,
    "skipTemplateCodegen": true
  }
}
