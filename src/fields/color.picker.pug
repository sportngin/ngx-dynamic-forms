doctype html

input.form-control(
    [formControl]='formControl',
    autocomplete='off',
    [ngClass]='{ "form-control-success": formControl.validator && formControl.valid, "form-control-danger": formControl.validator && !formControl.valid && formControl.touched }',
    [(colorPicker)]='value',
    [cpPosition]='"bottom"',
    [cpOKButton]='true',
    [cpOKButtonClass]='"btn btn-primary"',
    [cpCancelButton]='true',
    [cpCancelButtonClass]='"btn btn-secondary"',
    [cpSaveClickOutside]='false',
    [cpAlphaChannel]='"disabled"',
    (cpToggleChange)='onToggleChange($event)',
    [style.background-color]='value',
    [attr.disabled]='control.disabled ? "" : null',
)