doctype html

input.form-control(
    [type]='showPassword ? "text" : "password"',
    [formControl]='input',
    autocomplete='off',
    autocapitalize='none',
    [ngClass]='{ "form-control-success": input.validator && input.valid, "form-control-danger": input.validator && !input.valid && input.touched }',
    [attr.disabled]='control.disabled ? "" : null'
)
label.show-password.custom-checkbox(
    (click)='toggleShowPassword()'
)
    input.custom-control-input(
        type='checkbox',
        (click)='toggleShowPassword()',
        [value]='showPassword'
    )
    span.fa.ngdf-checkbox-indicator(
        [ngClass]='{ "fa-square-o": !showPassword, "fa-check-square-o": showPassword }'
    )
    span.text Show Password