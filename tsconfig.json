{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "stripInternal": true,
    "typeRoots": [ "./node_modules/@types" ],
    "types": [
      "core-js",
      "node"
    ],
    "lib": [
      "es2015",
      "dom"
    ],
    "outDir": "./dist"
  },
  "files": [
    "index.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  }
}
